<h1>Stock de bebidas</h1>
<div class="row">
  <div class="col-md-12">
    <div class="listing">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Stock</th>
              <th colspan="3"></th>
            </tr>
        	</thead>
      
        	<tbody>
            	<% @bebidas.each do |bebida| %>
             	<tr>
             		<th><%= bebida.nombre %> </th>
             		<th> <%= bebida.mi_stock %></th>

             		<th><%= link_to '', index_path(:bebida => bebida), class: 'btn btn-default btn-sm glyphicon glyphicon-plus', :title => "Editar" %></th>
             	</tr>
            
    			<%end%>
        	</tbody>
      </table>

      </div>
    </div>
  </div>
</div>



